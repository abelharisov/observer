{
    "name": "octolab/observer",
    "description": "Observability component.",
    "homepage": "https://github.com/octolab/observer",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Kamil Samigullin",
            "email": "kamil@samigullin.info"
        }
    ],
    "keywords": [
        "observability",
        "analytics",
        "logging",
        "metrics",
        "telemetry",
        "tracing"
    ],
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "OctoLab\\Observer\\": "src/",
            "OctoLab\\Observer\\Bricks\\Graylog\\": "bricks/graylog/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.5",
        "phpstan/phpstan": "^1.4",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest",
        "slevomat/coding-standard": "^7.0",
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.18"
    },
    "scripts": {
        "test": "phpunit"
    }
}
